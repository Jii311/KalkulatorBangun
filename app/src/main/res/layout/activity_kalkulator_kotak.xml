<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FragmentDatar.FragmentContentDatar.KalkulatorLingkaran">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/baseline_calculate_24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:tint="@color/white" />

        <EditText
            android:id="@+id/input1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:hint="Masukan Sisi"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/input_design"/>

        <TextView
            android:id="@+id/textHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input1"/>

        <Button
            android:id="@+id/buttonHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:textSize="25dp"
            android:backgroundTint="#3d3d3d"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textHasil"
            app:rippleColor="#80FFFFFF"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>